{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    // "plugin:react/recommended",
    // "airbnb"
    "react-app",
    "react-app/jest",
    "airbnb"
    // "airbnb-typescript",
    // "plugin:import/typescript"
  ],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [2, "single", "avoid-escape"],
    "react/prop-types": "off",
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
  }
}
